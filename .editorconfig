
# Repository-root .editorconfig for Kotlin + Jetpack Compose projects
root = true

# Default for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Kotlin source files (including .kt and .kts)
[*.{kt,kts}]
indent_style = space
indent_size = 4
max_line_length = 180

# Kotlin DSL Gradle files
[*.gradle.kts]
indent_style = space
indent_size = 4
max_line_length = 200

# XML (Android layouts, manifests)
[*.xml]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# Markdown: keep trailing spaces (useful for Markdown line breaks)
[*.md]
trim_trailing_whitespace = false
insert_final_newline = true

